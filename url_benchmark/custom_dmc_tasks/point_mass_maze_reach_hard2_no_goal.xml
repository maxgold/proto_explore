<mujoco model="planar point mass">
  <include file="./common/skybox.xml"/>
  <include file="./common/visual.xml"/>
  <include file="./common/materials.xml"/>

  <option timestep="0.02">
  </option>
  <asset>
      <material name="self2" rgba=".1 .2 .3 1"/>
    </asset>

  <default>
    <joint type="hinge" axis="0 0 1" limited="true" range="-.29 .29" damping="1"/>
    <motor gear=".1" ctrlrange="-1 1" ctrllimited="true"/>
    <default class="wall">
      <geom type="box" material="site"/>
    </default>
  </default>

  <worldbody>
    <light name="light" pos="0 0 1"/>
    <camera name="fixed" pos="0 0 .7" quat="1 0 0 0"/>
    <geom name="ground" type="plane" pos="0 0 0" size=".3 .3 .3" material="grid"/>

    <geom name="wall_x" type="plane" pos="-.3 0 .02" zaxis="1 0 0"  size=".02 .3 .02" material="decoration"/>
    <geom name="wall_neg_x" type="plane" pos=".3 0 .02" zaxis="-1 0 0"  size=".02 .15 .02" material="decoration"/>
    <geom name="wall_y" type="plane" pos="0 -.3 .02" zaxis="0 1 0"  size=".02 .3 .02" material="decoration"/>
    <geom name="wall_neg_y" type="plane" pos="0 .3 .02" zaxis="0 -1 0"  size=".3 .02 .02" material="decoration"/>

	 #maze horizontal (zaxis= 0 1 0)
    #maze size(x_length, , thickness of the maze wall)
	<geom name="maze_x1" class="wall" pos="-.18 .02 .02" zaxis="0 1 0"  size=".05 .02 .01"/>
    <geom name="maze_x2" class="wall" pos=".02 .02 .02" zaxis="0 1 0"  size=".08 .02 .01"/>
	<geom name="maze_x3" class="wall" pos=".1 .1 .02" zaxis="0 1 0"  size=".24 .02 .01"/>
	<geom name="maze_x4" class="wall" pos="0 .2 .02" zaxis="0 1 0"  size=".2 .02 .01"/>
	<geom name="maze_x5" class="wall" pos="-.24 .1 .02" zaxis="0 1 0"  size=".04 .02 .01"/>
    <geom name="maze_x6" class="wall" pos="-.07 -.06 .02" zaxis="0 1 0"  size=".06 .02 .01"/>
	<geom name="maze_x7" class="wall" pos="-.02 -.14 .02" zaxis="0 1 0"  size=".06 .02 .01"/>
	<geom name="maze_x8" class="wall" pos="0 -.2 .04" zaxis="0 1 0"  size=".2 .02 .01"/>

    <geom name="maze_y1" class="wall" pos="0 -.03 .04" zaxis="1 0 0"  size=".02 .05 .01"/>
	<geom name="maze_y2" class="wall" pos="-.14 -.06 .04" zaxis="1 0 0"  size=".02 .08 .01"/>
	<geom name="maze_y3" class="wall" pos="-.22 -.12 .04" zaxis="1 0 0"  size=".02 .08 .01"/>
	<geom name="maze_y4" class="wall" pos=".1 -.07 .04" zaxis="1 0 0"  size=".02 .12 .01"/>
	<geom name="maze_y5" class="wall" pos=".2 -.08 .04" zaxis="1 0 0"  size=".02 .1 .01"/>
	<geom name="maze_y6" class="wall" pos="0 .24 .04" zaxis="1 0 0"  size=".02 .04 .01"/>
    
    

    <body name="pointmass" pos=".3 0 .01">
      <camera name="cam0" pos="0 -0.3 0.3" xyaxes="1 0 0 0 0.7 0.7"/>
      <joint name="root_x" type="slide"  pos="0 0 0" axis="1 0 0" />
      <joint name="root_y" type="slide"  pos="0 0 0" axis="0 1 0" />
      <geom name="pointmass" type="sphere" size=".01" material="self" mass=".3"/>
    </body>

    <geom name="target" pos="-0.11 -0.11 .01" material="target" type="sphere" size=".015"  contype="0" conaffinity="0"/>
  </worldbody>

  <tendon>
    <fixed name="t1">
      <joint joint="root_x" coef="1"/>
      <joint joint="root_y" coef="0"/>
    </fixed>
    <fixed name="t2">
      <joint joint="root_x" coef="0"/>
      <joint joint="root_y" coef="1"/>
    </fixed>
  </tendon>

  <actuator>
    <motor name="t1" tendon="t1" ctrlrange="-1 1" ctrllimited="true"/>
    <motor name="t2" tendon="t2" ctrlrange="-1 1" ctrllimited="true"/>
  </actuator>
</mujoco>
